<nav>
  {{> navbar}}
</nav>

{{#each posts}}
    <div class="card card-post">
        <div class="card-content">
            <div class="media">
                <div class="media-left">
                    <figure class="image is-48x50">
                        <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
                    </figure>
                </div>
                <div class="media-content">
                    <p class="title is-4">{{this.title}}</p>
                    <p class="subtitle is-6">@jhonsmith</p>
                </div>
            </div>
            <div class="content">
                {{this.body}}
            </div>
        </div>
        <div class=" btn-post content">
            <a href="/posts/{{this.slug}}" class="button is-success is-light">See More</a>
        </div>
    </div>
{{/each}}